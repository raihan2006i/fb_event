<div class="page-header">
  <h1><%=t '.title', :default => "Sign in" %></h1>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'well form-inline' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email, :class => 'input-medium', :placeholder => "Email" %>
  <%= f.password_field :password, :class => 'input-medium', :placeholder => "Password" %>
  <% if devise_mapping.rememberable? -%>
    <label class="checkbox">
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  </label>
  <% end -%>
  <%= f.submit 'Sign in', :class => 'btn btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
